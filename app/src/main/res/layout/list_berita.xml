<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:paddingBottom="@dimen/_6sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_259sdp"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <com.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_4sdp"
                app:shape_roundRect_bottomLeftRadius="@dimen/_8sdp"
                app:shape_roundRect_bottomRightRadius="@dimen/_8sdp"
                app:shape_roundRect_topLeftRadius="@dimen/_8sdp"
                app:shape_roundRect_topRightRadius="@dimen/_8sdp"
                android:elevation="@dimen/_4sdp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:id="@+id/img_berita"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_header_night"/>
            </com.github.florent37.shapeofview.shapes.RoundRectView>
            <LinearLayout
                android:layout_weight="2"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How do I mount CIFS Windows Server / XP / Vista Shared folder under Linux operating systems?"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/_12sdp"
                    android:maxLines="2"
                    android:id="@+id/tv_judul_berita"
                    android:fontFamily="@font/opensanssemibold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <com.github.florent37.shapeofview.shapes.CircleView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        app:shape_circle_borderColor="@color/textBlack"
                        app:shape_circle_borderWidth="@dimen/_1sdp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_account_"
                            />
                    </com.github.florent37.shapeofview.shapes.CircleView>
                    <LinearLayout
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/oprensanreguler"
                            android:textColor="@color/textBlack"
                            android:text="Admin"/>
                        <TextView
                            android:textColor="@color/textBlack"
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/opensanslight"
                            android:layout_height="wrap_content"
                            android:text="12-05-2020"
                            android:id="@+id/tv_tanggal_berita"
                            />
                    </LinearLayout>
                        <ImageView
                            android:layout_marginLeft="@dimen/_180sdp"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:src="@drawable/ic_share"
                            android:layout_alignParentRight="true"
                            />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>