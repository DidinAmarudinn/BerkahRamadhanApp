<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardElevation="@dimen/_4sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/tv_judul_berita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oprensanreguler"
                    android:lineSpacingExtra="@dimen/_1sdp"
                    android:text="JUDUL ATAU \nHEADLINE BERITA"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_isi_berita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/opensanslight"
                    android:lineSpacingExtra="@dimen/_3sdp"
                    android:maxLines="6"
                    android:text="@string/dummytext"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_judul_berita" />

                <TextView
                    android:id="@+id/tv_tgl_berita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:fontFamily="@font/oprensanreguler"
                    android:text="2020/04/30"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_isi_berita" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:id="@+id/img_berita"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_header_night"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_24sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/_24sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/yellowAccent"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="SHARE"
                                android:textSize="@dimen/_12sdp"
                                android:fontFamily="@font/oprensanreguler"
                                android:gravity="center"
                                android:textColor="@color/textWhite"/>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>